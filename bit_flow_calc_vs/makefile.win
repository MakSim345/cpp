# CC = gcc
CC = cl
CFLAGS = -Wall
# CFLAGS =

GEN = gen.h 

PROGRAM = float_bit_show.exe

ALL_OBJ = mainc.obj utils.obj dbits.obj

$(PROGRAM): $(ALL_OBJ)
	link $(ALL_OBJ) /OUT:$(PROGRAM)

# All .o files depend on their corresponding .cpp file
%.obj: %.cpp %.h $(GEN)
	$(CC) $(CFLAGS) -c $<

clean:
	del *.obj
	del *.exe
